
<%= form_for([@post, @post.comments.build]) do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class:"form-control" ,placeholder:"Email address" %>
  </div>
  <br />

  <div class="form-group">
    <%= form.label :body, "Comment" %><br />
    <%= form.text_area :body, class:"form-control", placeholder: "Enter comment" %>
  </div>
  <br />
  
  <p> 
    <%= form.submit "Create Comment", class:"btn btn-primary btn-sm" %>
  </p>
<% end %>
