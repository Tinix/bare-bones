<p id="notice"><%= notice %></p>

<h3 class="text-primary">
  <%= @post.title %>
</h3>

<p>
  <%= @post.body %>
</p>

<small class="date">
  Submitted <%= time_ago_in_words(@post.created_at) %> Ago...
</small>
<p></p>
<h4 class="text-secondary"><%= @post.comments.count %> Comment</h4>
<%= render @post.comments %>

<h3 class="text-secondary">Add a comment:</h3>
<%= render "comments/form" %>

<br />
<%#= link_to 'Edit article', edit_post_path(@post), class:"btn btn-success btn-sm" %>
<%= link_to 'Back to article', posts_path, class: "btn btn-secondary btn-sm" %>
